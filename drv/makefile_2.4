build:	$(DRV)

$(DRV): $(MODOBJS)
	$(LD) -r -o eqnx.o $(MODOBJS)

sst.o: sst.c $(HFILES)
	$(CC) $(MCFLAGS) $(MCFLAGS2) -DMIDNIGHT $(INCLUDES) -I$(KINC) -c sst.c 

clean:
	@rm -f eqnx.o 
	@rm -f $(MODOBJS)

clobber: clean
